.card-style {
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: var(--card-shadow);
  background: var(--td-bg-color-container, #fff);
}

.todo-list {
  padding-bottom: 10rpx;
}

.delete-btn {
  background-color: #e34d59;
}

.edit-btn {
  background-color: #ed7b2f;
}

.padding-bottom {
  padding-bottom: 8rpx;
}


/* 强制cell填满容器 */
.t-cell {
  min-height: 100rpx !important;
  padding: 20rpx 30rpx !important;
  width: 720rpx !important;
  box-sizing: border-box;
  transition: 
    transform 0.4s cubic-bezier(0.23, 1, 0.32, 1),
    box-shadow 0.4s ease,
    background-color 0.3s ease;
}

/* 标题样式调整 */
.t-cell__title {
  flex: 1;
  min-width: 420rpx;
  max-width: 420rpx;
  margin-right: 10rpx !important;
  transform: translateY(10%);
  font-size: 34rpx !important;  /* 调大字号 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;  /* 新增标题截断 */
}

/* 备注描述样式调整 */
.t-cell__description {
  flex: 1;
  max-width: 420rpx;  /* 增大最大宽度 */
  margin-right: 10rpx !important;
  transform: translateY(-25%);
  font-size: 28rpx !important;  /* 调小字号 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

/* 右侧复选框定位调整 */
.t-cell__right-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.todo-item {
  margin: 20rpx 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease, background-color 0.5s ease; /* 新增背景色过渡 */
  position: relative;
  display: flex; /* 新增flex布局 */
}

/* 新增checkbox样式 */
.checkbox {
  flex-shrink: 0; /* 禁止缩放 */
  margin-right: 10rpx; /* 与内容间距 */
}

.todo-item .delete-icon:active {
  opacity: 0.6;
}

.todo-content {
  flex: 1;
  margin: 0 0;
}
.completed {
  background: #c8edcc !important;
  box-shadow: inset 4rpx 0 0 #4CAF50,
             0 4rpx 16rpx rgba(76,175,80,0.15);
  transform: translateY(-2rpx);
}
.completed .t-cell__title {
  color: #388e3c !important;
  text-decoration: line-through;
}
.completed-decorate {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #4CAF50;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

@keyframes ripple {
  0% {
    transform: scale(0);
    opacity: 1;
    box-shadow: 0 0 0 6rpx rgba(76,175,80,0.2);
  }
  50% {
    opacity: 0.6;
    box-shadow: 
      0 0 0 12rpx rgba(76,175,80,0.15),
      0 -8rpx 20rpx rgba(76,175,80,0.1);
  }
  100% {
    transform: scale(2.5);
    opacity: 0;
    box-shadow: 
      0 0 0 24rpx rgba(76,175,80,0),
      0 -16rpx 40rpx rgba(76,175,80,0);
  }
}

.swipe-content {
  width: 100%;
  transition: transform 0.3s ease;
  display: flex;
  align-items: center;
}




