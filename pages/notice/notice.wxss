.notice-card {
  background: linear-gradient(145deg, #ffffff 0%, #f8faf9 100%);
  border-radius: 24rpx;
  margin: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(76, 175, 80, 0.08);
  position: relative;
  overflow: hidden;
}

.notice-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: var(--primary-color);
}

.notice-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(0, 178, 106, 0.1);
}

.notice-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2d3436;
