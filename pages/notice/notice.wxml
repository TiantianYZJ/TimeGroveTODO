<view class="container">
  <!-- 公告卡片 -->
  <view 
    class="notice-card" 
    wx:for="{{notices}}" 
    wx:key="index"
    data-index="{{index}}" 
    bindtap="showNotice"
  >
    <view class="notice-header">
      <text class="notice-title">{{item.title}}</text>
      <text class="notice-date">{{item.date}}</text>
    </view>
    <view class="notice-content">{{item.content}}</view>
  </view>
</view>