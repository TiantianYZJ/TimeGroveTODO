.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.stats-item {
  text-align: center;
}

.stats-label {
  font-size: 28rpx;
  color: #666;
}

.stats-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #00b26a;
  margin-top: 20rpx;
}

.chart-container {
  width: 100%;
  height: 600rpx;
}

/* 新增图表样式 */
.custom-chart {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
}

/* 新增仪表盘样式 */
.dashboard {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.metric-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.metric-card.accent {
  background: #00b26a15;
}

.metric-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #2d3436;
  display: block;
}

.metric-label {
  font-size: 28rpx;
  color: #666;
}

/* 修改柱状图样式 */
.bar-chart {
  flex-direction: column;
  gap: 40rpx;
  margin-top: 30rpx;
}

.bar-item {
  width: 100%;
  height: 60rpx;
}

.bar-container {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
  border-radius: 30rpx;
  overflow: hidden;
}

.bar.completed {
  height: 100%;
  background: #00b26a;
  transition: width 0.6s ease-out;
}

/* 新增标题样式 */
.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
  margin-bottom: 20rpx;
  display: block;
}

/* 修正横向填充样式 */
.bar.completed {
  width: 0; /* 初始宽度 */
  height: 100%;
  background: #00b26a;
  transition: width 0.6s ease-out;
}

/* 添加百分比标签 */
.bar-container::after {
  content: attr(data-percent);
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #515151;
}

.bar {
  width: 100%;
  transition: height 0.6s ease-out;
}

.bar.completed {
  background: #00b26a;
}

.bar.remaining {
  background: #eee;
}

.bar-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  text-align: center;
}

/* 最近活动样式 */
.recent-activity {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
  display: block;
  margin-bottom: 20rpx;
}

.update-time {
  font-size: 28rpx;
  color: #636e72;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.time-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.empty-tip {
  color: #999;
  text-align: center;
}

/* 在文件末尾添加 */
.location-label {
  position: absolute;
  left: 20rpx;
  color: #515151;
  font-size: 24rpx;
  line-height: 60rpx;
  z-index: 2;
}

.bar-container {
  position: relative;
  height: 60rpx;
  margin: 20rpx 0;
}

/* 在地图容器下方添加 */
#locationMap {
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  margin-top: 20rpx;
}

#shareCanvas {
  position: absolute;
  top: -9999rpx;
  left: -9999rpx;
  width: 600rpx;
  height: 1000rpx;
}