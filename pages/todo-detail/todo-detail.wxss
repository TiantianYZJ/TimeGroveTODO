.container {
  padding: 40rpx;
  background: #ffffff;
  min-height: 100vh;
}

.todo-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 60rpx;
  color: #333;
}

.date-info {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.label {
  color: #666;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.value {
  color: #333;
  font-size: 34rpx;
}

.remarks {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  /* 新增多行对齐样式 */
  display: flex;
  align-items: flex-start;
}

.label {
  color: #666;
  font-size: 30rpx;
  margin-right: 20rpx;
  /* 保持标签宽度固定 */
  flex-shrink: 0;
}

.value {
  color: #333;
  font-size: 34rpx;
  /* 允许自动换行 */
  word-break: break-all;
  line-height: 1.6;
}

.calendar-section {
  margin-top: 50rpx;
}

.calendar-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: #f0faf5;
  border-radius: 8rpx;
  color: #00b26a;
}

.calendar-btn text {
  margin-left: 15rpx;
  font-size: 34rpx;
}

/* 保留原有 van-calendar 组件样式 */
.van-calendar__selected-day,
.van-calendar__day--end.van-calendar__day--selected,
.van-calendar__day--start.van-calendar__day--selected {
  background: #00b26a !important;
}

/* 新增操作栏样式 */
.action-bar {
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
  background: rgba(0,0,0,0.05);
  border-radius: 50%;
}