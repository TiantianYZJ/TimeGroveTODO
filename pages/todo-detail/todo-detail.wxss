.container {
  padding: 40rpx;
  padding-top: 25rpx;
  padding-bottom: 100rpx;
  min-height: 100vh;
}

.todo-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 60rpx;
  padding-right: 170rpx;
  color: #333;
  word-break: break-all; /* 允许长单词换行 */
  display: -webkit-box; /* 多行截断方案 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.todo-title-share {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 60rpx;
  color: #333;
  word-break: break-all; /* 允许长单词换行 */
  display: -webkit-box; /* 多行截断方案 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.date-info {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

/* 在现有样式后添加 */
.map-container {
  margin-top: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 调整位置卡片间距 */
.location-info {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  /* 新增 */
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.remarks {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  display: flex;
  align-items: flex-start;
  /* 新增垂直对齐方式 */
  align-items: baseline; /* 修改这里 */
}

.label {
  color: #666;
  font-size: 30rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  /* 新增垂直对齐 */
  line-height: 34rpx; /* 与value字体大小一致 */
}

.value {
  color: #333;
  font-size: 34rpx;
  word-break: break-all;
  line-height: 1.6;
  /* 新增首行缩进修正 */
  text-indent: 0; /* 确保没有缩进 */
}

.label {
  color: #666;
  font-size: 30rpx;
  margin-right: 20rpx;
  /* 保持标签宽度固定 */
  flex-shrink: 0;
}

/* 新增操作栏样式 */
.action-bar {
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
  background: rgba(0,0,0,0.05);
  border-radius: 50%;
}

.address {
  display: block;
  font-size: 28rpx;
  color: #666; /* 调整为与备注更接近的颜色 */
  margin-top: 10rpx;
  line-height: 1.4;
}

/* 在.map-container样式后添加 */
.nav-btn {
  width: 100%;
  margin: 25rpx 0;
  padding: 0 0;
  background: #00b26a;
  color: white;
  font-size: 32rpx;
}

/* 新增分享相关样式 */
.share-footer {
  background-color: #e3f5eb;
  position: fixed;
  bottom: 10rpx;
  width: 100%;
  padding: 40rpx;
  text-align: center;
  margin-left: -40rpx;
}

.share-tip {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.add-btn {
  background: #00b26a;
  color: white;
  border-radius: 50rpx;
  width: 90%;
}
