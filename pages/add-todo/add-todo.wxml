<view class="container">
  <view class="card">
    <textarea 
      auto-height 
      placeholder="请输入待办内容" 
      bindinput="onInput" 
      value="{{inputValue}}"
      class="input"
     style="width: 552rpx; display: block; box-sizing: border-box"></textarea>
    
    <view class="button-group">
      <button class="cancel-btn" bindtap="goBack">取消</button>
      <button class="confirm-btn" bindtap="addTodo">确认添加</button>
    </view>
  </view>
</view>