.voice-tip {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f0faf5;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
.tip-text {
  color: #00b26a;
  font-size: 28rpx;
}

.container {
  padding: 10rpx 30rpx;
}

.form-container {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-item {
  padding-bottom: 20rpx;
}

.question-title {
  display: block;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 15rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #00b26a;
}

.picker-field {
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  color: #666;
}