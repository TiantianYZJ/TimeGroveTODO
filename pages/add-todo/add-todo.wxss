.container {
  background: rgba(0,0,0,0.4);
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease;
}

.card {
  background: white;
  width: 80%;
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.2);
}

.input {
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #dfe6e9;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.cancel-btn {
  flex: 1;
  background: #dfe6e9;
  color: #2d3436;
}

.confirm-btn {
  flex: 1;
  background: #00b26a;
  color: white;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}