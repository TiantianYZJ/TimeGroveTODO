/* 新增头部样式 */
.header {
  padding: 40rpx 30rpx;
  background: #ffffff;
  /* box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1); */
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #2d3436;
}

/* 卡片式列表项 */
.todo-item {
  margin: 20rpx 20rpx;
  padding: 30rpx 90rpx 30rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease, background-color 0.5s ease; /* 新增背景色过渡 */
  position: relative;
  display: flex; /* 新增flex布局 */
}

/* 新增checkbox样式 */
checkbox {
  flex-shrink: 0; /* 禁止缩放 */
  margin-right: 20rpx; /* 与内容间距 */
}

.todo-item .delete-icon {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
  transition: opacity 0.3s;
}

.todo-item .delete-icon:active {
  opacity: 0.6;
}

/* 浮动按钮 */
.fab-container {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  z-index: 999;
}

.fab {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #00b26a;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.fab-icon {
  /* 精准居中 */
  color: white;
  display: flex;
  font-size: 60rpx;
  transform: translateY(-4rpx); /* 视觉居中微调 */
  margin: 0;
}

.container {
  padding: 20rpx;
}

.todo-list {
  border-top: 1rpx solid #eee;
}

.todo-content {
  flex: 1;
  margin: 0 0;
}

.todo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0;
}

.todo-text {
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.todo-date {
  font-size: 26rpx;
  color: #636e72;
}

.todo-remarks {
  font-size: 28rpx;
  color: #999;
  line-height: 1.0;
}

/* 修改完成状态样式 */
.completed {
  background: #c7edcc !important; /* 浅绿色背景 */
  box-shadow: 0 4rpx 12rpx rgba(116, 184, 123, 0.2); /* 调整阴影颜色 */
}

.completed .todo-text {
  color: #999;
  text-decoration: line-through;
}


/* 新增动画效果 */
@keyframes slideIn {
  from { transform: translateY(20rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

@keyframes fadeOut {
  from { transform: scale(1); opacity: 1; }
  to { transform: scale(0.8); opacity: 0; }
}

.add-animation {
  animation: slideIn 0.3s ease forwards;
}

.remove-animation {
  animation: fadeOut 0.3s ease forwards;
}

.todo-item {
  overflow: hidden; /* 新增 */
  position: relative;
}

.swipe-content {
  width: 100%;
  transition: transform 0.3s ease;
  display: flex;
  align-items: center;
}