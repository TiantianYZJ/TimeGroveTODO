.container {
  padding: 30rpx;
}

/* 新增顶部说明样式 */
.intro-text {
  font-size: 25rpx;
  color: #666;
  line-height: 1.0;
  padding: 30rpx;
  border-radius: 16rpx;
}

.contributor-card {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 24rpx;
  display: flex; /* 改为横向布局 */
  align-items: flex-start;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.1); /* 与全局卡片阴影一致 */
}

.contributor-avatar {
  width: 120rpx;  /* 放大头像尺寸 */
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid #fff; /* 添加白色边框 */
  box-shadow: 0 4rpx 12rpx rgba(0,178,106,0.15); /* 主题色投影 */
}

.contributor-info { /* 新增右侧容器 */
  flex: 1;
  display: flex;
  flex-direction: column;
}

.contributor-name {
  font-size: 40rpx; /* 调大字号 */
  color: #2d3436;
  font-weight: 600; /* 加粗 */
  margin-top: 5rpx;
  margin-bottom: 10rpx; /* 增加与贡献内容的间距 */
}

.contribution-tag {
  font-size: 25rpx;
  color: #ffffff;
  flex-wrap: wrap;
  padding: 10rpx 24rpx;
  margin-right: 20rpx;
  background: linear-gradient(145deg, #00b26a 0%, #00d177 100%);
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,178,106,0.15);
  position: relative;
  transition: all 0.2s ease;
}

.contribution-tag::before {
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  opacity: 0.8;
}

.contribution-tag:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0,178,106,0.2);
}