.card-style {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  margin: 32rpx;
}

.result-box {
  padding: 48rpx;
  text-align: center;
  background: #fff;
  margin: 32rpx;
  border-radius: 16rpx;
  border: 2rpx dashed #00b26a;
}

.result-text {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 24rpx;
}

.food-name {
  font-size: 48rpx;
  color: #00b26a;
  font-weight: 600;
  letter-spacing: 2rpx;
  animation: zoom-in 0.6s ease;
}

.btn-container {
  padding: 48rpx;
  display: flex;
  flex-direction: column;
}

@keyframes fade-in {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes zoom-in {
  0% { transform: scale(0.9); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* 新增样式 */
.stats-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #00b26a, #00c073);
  margin: 32rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,178,106,0.2);
}

.stats-badge {
  display: flex;
  flex-direction: column;
}

.dishes-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 15rpx;
}

.stats-number {
  font-size: 60rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.stats-label {
  font-size: 40rpx;
  color: rgba(255,255,255,0.9);
}

/* 新增餐型统计样式 */
.meal-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.meal-stat-item {
  display: flex;
  align-items: center;
  justify-content: flex-end; /* 新增：内容底部对齐 */
  height: 100rpx; /* 新增：固定高度保证对齐 */
}

.meal-stat-number {
  font-size: 50rpx;
  font-weight: 600;
  color: rgba(255,255,255,0.9);
}

.meal-stat-label {
  font-size: 40rpx;
  color: rgba(255,255,255,0.7);
  margin-right: 10rpx;
}

.meal-selector {
  white-space: nowrap;
  padding: 0 14rpx;
}

.meal-tab {
  display: inline-flex;
  flex-direction: column;
  padding: 24rpx 47rpx;
  margin: 0 16rpx;
  border-radius: 60rpx;
  background: #f5f5f5;
  color: #666;
  transition: all 0.3s ease;
}

.meal-tab.active {
  background: #00b26a;
  color: #fff;
  transform: scale(1.05);
}

.result-card {
  margin: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  background: linear-gradient(45deg, #f8fff9, #f0faf3);
}

.result-header {
  border-radius: 24rpx;
}

.result-title {
  padding: 20rpx;
}

.food-card {
  padding: 48rpx;
  text-align: center;
  border-radius: 24rpx;
}

.food-name {
  font-size: 56rpx;
  color: #00b26a;
  font-weight: 700;
  animation: pop-in 0.6s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

.history-scroll {
  margin-top: 32rpx;
  white-space: nowrap;
}

.history-badge {
  display: inline-flex;
  padding: 12rpx 32rpx;
  margin-right: 24rpx;
  background: rgba(0,178,106,0.1);
  border-radius: 40rpx;
  color: #00b26a;
  font-size: 28rpx;
}

.action-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  padding: 32rpx 32rpx;
}

@keyframes pop-in {
  0% { transform: scale(0.9); opacity: 0; }
  60% { transform: scale(1.05); }
  100% { transform: scale(1); opacity: 1; }
}
