.card-style {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  margin: 32rpx;
}

.result-box {
  padding: 48rpx;
  text-align: center;
  background: #fff;
  margin: 32rpx;
  border-radius: 16rpx;
  border: 2rpx dashed #00b26a;
}

.result-text {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 24rpx;
}

.food-name {
  font-size: 48rpx;
  color: #00b26a;
  font-weight: 600;
  letter-spacing: 2rpx;
  animation: zoom-in 0.6s ease;
}

.btn-container {
  padding: 48rpx;
  display: flex;
  flex-direction: column;
}

@keyframes fade-in {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes zoom-in {
  0% { transform: scale(0.9); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}
